<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS} %level]: [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.github.alexdlaird.ngrok" level="ERROR" />
    <logger name="com.github.alexdlaird.ngrok.NgrokClient" level="ERROR" />
    <logger name="rg.springframework.boot" level="ERROR" />
    <Logger name="org.springframework.boot.autoconfigure.logging" level="error" />
</configuration>
